	keywords = {Algorithms, brain, Brain Mapping, Diffusion Magnetic Resonance Imaging, Humans, Imaging, Three-Dimensional, Markov Chains, Models, Statistical, Pattern Recognition, Automated, Phantoms, Imaging, Reproducibility of Results},
	pages = {1482--1490}
