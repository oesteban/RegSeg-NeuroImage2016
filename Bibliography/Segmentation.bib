	keywords = {Clustering, diffusion-weighted imaging, {MRI}, Multiple sclerosis, segmentation},
	pages = {877--885},
	file = {ScienceDirect Full Text PDF:/home/oesteban/.zotero/zotero/skyhq08c.default/zotero/storage/UEH8MG59/Hadjiprocopis et al. - 2005 - Unbiased segmentation of diffusion-weighted magnet.pdf:application/pdf;ScienceDirect Snapshot:/home/oesteban/.zotero/zotero/skyhq08c.default/zotero/storage/HDP7V5BC/S0730725X05002304.html:text/html}
