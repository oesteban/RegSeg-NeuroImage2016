	urldate = {2013-05-16},
	journal = {{NeuroImage}},
	author = {Yap, Pew-Thian and Chen, Yasheng and An, Hongyu and Yang, Yang and Gilmore, John H. and Lin, Weili and Shen, Dinggang},
	month = mar,
	year = {2011},
	note = {{PMID:} 21147231
{PMCID:} {PMC3035740}},
	pages = {545--556},
	file = {PubMed Central Full Text PDF:/home/oesteban/.zotero/zotero/ndhgvh37.default/zotero/storage/EASTQA82/Yap et al. - 2011 - SPHERE SPherical Harmonic Elastic REgistration of.pdf:application/pdf}
