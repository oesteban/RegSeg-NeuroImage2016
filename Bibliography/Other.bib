	author = {Van Horn, John Darrell and Irimia, Andrei and Torgerson, Carinna M. and Chambers, Micah C. and Kikinis, Ron and Toga, Arthur W.},
	month = may,
	year = {2012},
	pages = {e37454},
	file = {PLoS Full Text PDF:/home/oesteban/.zotero/zotero/ndhgvh37.default/zotero/storage/XZHIWDUB/Van Horn et al. - 2012 - Mapping Connectivity Damage in the Case of Phineas.pdf:application/pdf;PLoS Snapshot:/home/oesteban/.zotero/zotero/ndhgvh37.default/zotero/storage/SDHR73QA/infodoi10.1371journal.pone.html:text/html}
