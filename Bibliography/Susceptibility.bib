	pages = {80 --93},
	file = {IEEE Xplore Abstract Record:/home/oesteban/.zotero/zotero/ndhgvh37.default/zotero/storage/U5NWFWXD/articleDetails.html:text/html;IEEE Xplore Full Text PDF:/home/oesteban/.zotero/zotero/ndhgvh37.default/zotero/storage/QXEJ468D/Kybic et al. - 2000 - Unwarping of unidirectionally distorted EPI images.pdf:application/pdf}
},

