	keywords = {Artificial Intelligence (incl. Robotics), B0 field mapping, B-spline image registration, Computer Graphics, {DTI}, {EPI} distortion correction, Health Informatics, Image Processing and Computer Vision, Imaging / Radiology, Pattern Recognition},
