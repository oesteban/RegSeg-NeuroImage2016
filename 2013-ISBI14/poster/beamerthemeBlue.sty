\setbeamertemplate{headline}{
  \nointerlineskip%
  \begin{beamercolorbox}[wd=\paperwidth,center,dp=5.0ex]{headline title}
    \vbox{}\vskip3ex%
    \strut%
    \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}}%
    \strut%
    \vskip-0.8ex%
  \end{beamercolorbox}
  \nointerlineskip%
  \begin{beamercolorbox}[wd=\paperwidth,center]{headline authors}
    \vbox{}\vskip3ex%
    \strut%
    \usebeamercolor{author in authors}{\color{fg}\large{\insertauthor}}\newline%
    \strut%
    \vbox{}\vskip1ex%
    \strut%
    \usebeamercolor{institute in institutions}{\color{fg}\normalsize{\insertinstitute}}%
    \strut%
    \vskip3ex%
  \end{beamercolorbox}
  
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}

