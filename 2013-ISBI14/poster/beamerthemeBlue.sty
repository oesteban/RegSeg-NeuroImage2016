% lines
\setbeamercolor{separation line}{bg=taskyblue}

% poster background, body colors, and fonts
\setbeamercolor*{normal text}{bg=lightblue, fg=black}

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=white,bg=ta2skyblue}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=taskyblue}

% alertblock environment
%\setbeamercolor{block alerted title}{fg=taskyblue,bg=ta2skyblue}
