% headline colors and fonts
\setbeamercolor{headline}{bg=white,fg=darkblue}
\setbeamercolor{headline title}{fg=white,bg=darkblue}
\setbeamercolor{headline authors}{fg=darkblue,bg=white}
\setbeamercolor{headline institutions}{fg=black,bg=white}


% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=darkblue}
\setbeamerfont{footline}{fg=white,size=\normalsize,series=\tt}

\setbeamercolor{framesubtitle}{bg=white}
