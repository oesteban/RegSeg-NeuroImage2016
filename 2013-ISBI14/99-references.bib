	keywords = {anisotropy, brain, Computer Simulation, diffusion, Humans, Image Processing, Computer-Assisted, Magnetic resonance imaging},
	pages = {770--780}
},

@article{metzler-baddeley_how_2012,
	title = {How and how not to correct for {CSF-contamination} in diffusion {MRI}},
