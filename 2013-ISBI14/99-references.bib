	note = {{PMID:} 21147231
{PMCID:} {PMC3035740}},
	pages = {545--556},
	file = {PubMed Central Full Text PDF:/home/oesteban/.zotero/zotero/skyhq08c.default/zotero/storage/EASTQA82/Yap et al. - 2011 - SPHERE SPherical Harmonic Elastic REgistration of.pdf:application/pdf}
